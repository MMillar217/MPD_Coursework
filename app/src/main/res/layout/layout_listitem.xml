<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:id="@+id/parentLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/silver"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/border_card">
                <ImageView
                    android:id="@+id/levelIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/lvl_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road Issue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="55dp"
                    android:id="@+id/itemTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/itemTitle"
                    android:text="Description of road issue"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginLeft="55dp"
                    android:id="@+id/itemDesc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemDesc"
                    android:text="publication date"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:layout_marginLeft="55dp"
                    android:id="@+id/itemPubDate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemPubDate"
                    android:text="Longitude and latitude - placeholder as will have map"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/itemPoint"/>

            </RelativeLayout>

    </androidx.cardview.widget.CardView>


